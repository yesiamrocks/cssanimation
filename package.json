{
    "name": "cssanimationio",
    "version": "2.2.0",
    "description": "A Powerful CSS Animation Library with GSAP Support for Advanced Motion Design.",
    "main": "index.js",
    "style": "dist/cssanimation.css",
    "keywords": [
        "css",
        "animation",
        "CSS animation library",
        "scroll animation",
        "gsap animation",
        "text animation",
        "pure CSS animations",
        "letter animation effects",
        "CSS keyframe animations",
        "animate text with CSS"
    ],
    "author": "Shafayetul Islam Pavel <hello@cssanimation.io>",
    "license": "SEE LICENSE IN LICENSE",
    "repository": {
        "type": "git",
        "url": "https://github.com/yesiamrocks/cssanimation.io"
    },
    "bugs": {
        "url": "https://github.com/yesiamrocks/cssanimation.io/issues"
    },
    "homepage": "https://cssanimation.io/",
    "files": [
        "dist",
        "docs",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "npm run generate:map && npm run build:css && npm run copy:assets && npm run build:classlist && npm run build:gsap",
        "build:css": "postcss src/*.css -d dist/ --no-map",
        "build:prefix": "postcss src/*.css -d dist/ --no-map",
        "start": "postcss src/*.css -d dist/ --watch --no-map",
        "copy:assets": "cpx \"src/*.js\" dist/ && cpx \"src/*.md\" dist/ && cpx \"src/modules/**/*\" dist/modules && cpx \"src/animations/**/*\" dist/animations",
        "lint:css": "stylelint \"src/**/*.css\"",
        "lint:css:fix": "stylelint \"src/**/*.css\" --fix",
        "format:css": "prettier --write \"src/**/*.css\"",
        "build:classlist": "node tools/extract-class-names.js",
        "build:gsap": "rollup -c",
        "generate:map": "node scripts/gen-animation-map.mjs"
    },
    "peerDependencies": {
        "gsap": "^3.12.0"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^28.0.3",
        "@rollup/plugin-node-resolve": "^16.0.1",
        "autoprefixer": "^10.4.21",
        "cpx": "^1.2.1",
        "cssnano": "^7.0.7",
        "gsap": "^3.12.0",
        "mkdirp": "^3.0.1",
        "postcss": "^8.4.31",
        "postcss-cli": "^11.0.1",
        "postcss-prefix-selector": "^2.1.1",
        "postcss-preset-env": "^10.1.6",
        "postcss-selector-namespace": "^1.2.2",
        "postcss-selector-prefix": "^5.0.1",
        "prettier": "^3.5.3",
        "rollup": "^4.41.0",
        "stylelint": "^16.19.1",
        "stylelint-config-standard": "^38.0.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "exports": {
        ".": "./index.js",
        "./gsap": "./dist/cssanimation-gsap.js",
        "./gsap-umd": "./dist/cssanimation-gsap.umd.js",
        "./letter": "./dist/ca-letteranimation.js",
        "./css": "./dist/cssanimation.css",
        "./utility": "./dist/cssanimation-utility.css"
    },
    "dependencies": {
        "glob-parent": "^6.0.2",
        "micromatch": "^4.0.8"
    }
}
